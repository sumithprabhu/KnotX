{
  "name": "cross-chain-relayer",
  "version": "1.0.0",
  "description": "Production-grade cross-chain messaging relayer server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsup src/index.ts --format cjs --dts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "relayer",
    "cross-chain",
    "blockchain",
    "messaging"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@casperlabs/casper-js-sdk": "^2.7.0",
    "@solana/web3.js": "^1.87.6",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "mongoose": "^8.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
